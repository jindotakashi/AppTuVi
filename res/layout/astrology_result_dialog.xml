<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/date_bg" >

    <ImageView
        android:id="@+id/astrology_result_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bach_duog" />

    <TextView
        android:id="@+id/astrology_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/astrology_result_img"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/astrology_result_img" >

        <TextView
            android:id="@+id/astrology_result_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="sadadas"
            android:padding="5dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/astrology_result_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>

</RelativeLayout>